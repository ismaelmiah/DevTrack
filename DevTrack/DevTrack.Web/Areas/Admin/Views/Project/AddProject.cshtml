@model DevTrack.Web.Areas.Admin.Models.ProjectCreateModel

@{
    ViewData["Title"] = "AddProject";
}
<div class="row">
    <div class="col">
        <h2>Create New Project</h2>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card card-info">
            <form asp-action="AddProject">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Project Name</label>
                                <input asp-for="Name" class="form-control" value="" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsAdmin" /> I am Admin
                                </label>
                            </div>
                        </div>
                        <div class="col-6">

                            <h5>Tracking Settings</h5>
                            <hr />

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Setting.AllowTracking" value="true" /> Allow Tracking
                                </label>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Setting.TakeScreenShot" /> Allow Taking ScreenShot
                                </label>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Setting.WebCamCapture" /> Allow Captureing WebCam
                                </label>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Setting.TrackKeyboardHits" /> Allow Tracking Keyboard Hits
                                </label>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Setting.TrackMouseHits" /> Allow Tracking Mouse Hits
                                </label>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Setting.TrackRunningProgram" /> Allow Tracking Running Program
                                </label>
                            </div>

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Setting.TrackActiveProgram" /> Allow Tracking Active Program
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group btn-group">
                        <input type="submit" value="Create Project" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
